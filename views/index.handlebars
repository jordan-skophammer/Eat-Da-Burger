<h1>Burger Me</h1>

<img src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/impossible-burger-1523482169.jpg?crop=1.00xw:0.748xh;0,0.156xh&resize=768:*" alt="burger-main" style="height: 100px; width:100px;">

<h2>Burger List</h2>
<ol id="added-list">
    {{#each burger}}
        {{#unless eaten}}
            {{> burgers/burger-list eaten=false}}
        {{/unless}}
    {{/each}}
</ol>

<h2>Burger Eaten</h2>
<ol id="eaten-list">
    {{#each burger}}
        {{#if eaten}}
            {{> burgers/burger-eaten eaten=true}}
        {{/if}}
    {{/each}}
</ol>

<form>
    <textarea name="burger-add" id="burger-add" cols="30" rows="10"></textarea>

    <button id="submit" type="submit">Add Burger</button>
</form>


